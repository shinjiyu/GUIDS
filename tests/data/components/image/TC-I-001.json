              {
                "type": "image",
                "id": "circleImage",
                "x": 75,
                "y": 50,
                "width": 100,
                "height": 100,
                "source": "assets/images/sample_avatar.jpg",
                "style": {
                  "backgroundColor": "#eeeeee",
                  "cornerRadius": 50
                }
              },
              {
                "type": "text",
                "id": "circleImageDesc",
                "x": 10,
                "y": 170,
                "width": 230,
                "height": 70,
                "content": "Circular image with full corner radius (equal to half width/height)",
                "style": {
                  "fontSize": 14,
                  "color": "#666666",
                  "textAlign": "center"
                }
              }
            ]
          },
          {
            "type": "container",
            "id": "covermodeImageContainer",
            "x": 860,
            "y": 100,
            "width": 250,
            "height": 250,
            "style": {
              "backgroundColor": "#f0f0f0",
              "borderColor": "#dddddd",
              "borderWidth": 1,
              "cornerRadius": 8
            },
            "children": [
              {
