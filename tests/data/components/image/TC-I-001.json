              {
                "type": "text",
                "id": "containmodeImageDesc",
                "x": 10,
                "y": 210,
                "width": 230,
                "height": 30,
                "content": "Image with contain resize mode",
                "style": {
                  "fontSize": 14,
                  "color": "#666666",
                  "textAlign": "center"
                }
              }
            ]
          },
          {
            "type": "container",
            "id": "interactiveImageContainer",
            "x": 320,
            "y": 370,
            "width": 250,
            "height": 250,
            "style": {
              "backgroundColor": "#f0f0f0",
              "borderColor": "#dddddd",
              "borderWidth": 1,
              "cornerRadius": 8
            },
            "children": [
              {
                "type": "text",
                "id": "interactiveImageTitle",
                "x": 10,
                "y": 10,
                "width": 230,
                "height": 30,
                "content": "Interactive Image",
                "style": {
                  "fontSize": 16,
                  "fontWeight": "bold",
                  "color": "#333333"
                }
              },
              {
                "type": "image",
                "id": "interactiveImage",
                "x": 25,
                "y": 50,
                "width": 200,
                "height": 150,
                "source": "assets/images/sample3.jpg",
                "style": {
                  "backgroundColor": "#eeeeee"
                },
                "events": {
                  "click": {
                    "action": "alert",
                    "params": {
                      "message": "Image clicked!"
                    }
                  }
                },
                "states": {
                  "hover": {
                    "style": {
                      "opacity": 0.8,
                      "transform": "scale(1.05)"
                    }
                  }
                }
              },
              {
                "type": "text",
                "id": "interactiveImageDesc",
                "x": 10,
                "y": 210,
                "width": 230,
                "height": 30,
                "content": "Clickable image with hover effect",
                "style": {
                  "fontSize": 14,
                  "color": "#666666",
                  "textAlign": "center"
                }
              }
            ]
          },
          {
            "type": "container",
            "id": "borderedImageContainer",
            "x": 590,
            "y": 370,
            "width": 250,
            "height": 250,
            "style": {
