              },
              {
                "type": "image",
                "id": "covermodeImage",
                "x": 25,
                "y": 50,
                "width": 200,
                "height": 150,
                "source": "assets/images/sample_landscape.jpg",
                "resizeMode": "cover",
                "style": {
                  "backgroundColor": "#eeeeee"
                }
              },
              {
                "type": "text",
                "id": "covermodeImageDesc",
                "x": 10,
                "y": 210,
                "width": 230,
                "height": 30,
                "content": "Image with cover resize mode",
                "style": {
