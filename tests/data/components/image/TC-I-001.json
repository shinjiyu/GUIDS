        "type": "container",
        "id": "imageTestContainer",
        "x": 50,
        "y": 50,
        "width": 1100,
        "height": 700,
        "style": {
          "backgroundColor": "#ffffff",
          "cornerRadius": 10,
          "shadowColor": "rgba(0,0,0,0.1)",
          "shadowBlur": 10,
          "shadowOffsetX": 5,
          "shadowOffsetY": 5
        },
        "children": [
          {
            "type": "text",
            "id": "pageTitle",
            "x": 50,
            "y": 30,
            "width": 1000,
            "height": 40,
            "content": "Image Component Test Cases",
            "style": {
              "fontSize": 24,
              "fontWeight": "bold",
              "color": "#333333",
              "textAlign": "center"
            }
          },
          {
            "type": "container",
            "id": "basicImageContainer",
            "x": 50,
            "y": 100,
            "width": 250,
            "height": 250,
            "style": {
              "backgroundColor": "#f0f0f0",
              "borderColor": "#dddddd",
              "borderWidth": 1,
              "cornerRadius": 8
            },
            "children": [
              {
                "type": "text",
                "id": "basicImageTitle",
                "x": 10,
                "y": 10,
                "width": 230,
                "height": 30,
                "content": "Basic Image",
                "style": {
                  "fontSize": 16,
                  "fontWeight": "bold",
                  "color": "#333333"
                }
              },
              {
                "type": "image",
                "id": "basicImage",
                "x": 25,
                "y": 50,
                "width": 200,
                "height": 150,
                "source": "assets/images/sample1.jpg",
                "style": {
                  "backgroundColor": "#eeeeee"
                }
              },
              {
                "type": "text",
                "id": "basicImageDesc",
                "x": 10,
                "y": 210,
                "width": 230,
                "height": 30,
                "content": "Standard image rendering",
                "style": {
                  "fontSize": 14,
                  "color": "#666666",
                  "textAlign": "center"
                }
              }
            ]
          },
          {
            "type": "container",
            "id": "cornerRadiusImageContainer",
            "x": 320,
            "y": 100,
            "width": 250,
            "height": 250,
            "style": {
              "backgroundColor": "#f0f0f0",
              "borderColor": "#dddddd",
              "borderWidth": 1,
              "cornerRadius": 8
            },
            "children": [
              {
                "type": "text",
                "id": "cornerRadiusImageTitle",
                "x": 10,
                "y": 10,
                "width": 230,
                "height": 30,
                "content": "Rounded Image",
                "style": {
                  "fontSize": 16,
                  "fontWeight": "bold",
                  "color": "#333333"
