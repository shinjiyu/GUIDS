{
  "version": "1.0",
  "name": "Image Component Test",
  "designWidth": 1200,
  "designHeight": 800,
  "root": {
    "type": "screen",
    "id": "mainScreen",
    "style": {
      "backgroundColor": "#f5f5f5"
