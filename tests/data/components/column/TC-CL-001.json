{
  "version": "1.0",
  "name": "Column组件基本渲染测试",
  "root": "screen",
  "designReference": {
    "width": 1200,
    "height": 800
  },
  "components": {
    "screen": {
      "id": "screen",
      "type": "screen",
      "style": "screenStyle",
      "children": ["container"]
    },
    "title": {
      "id": "title",
      "type": "text",
      "style": "titleStyle",
      "text": "Column组件基本渲染测试"
    },
    "container": {
      "id": "container",
      "type": "container",
      "style": "containerStyle",
      "children": ["title", "columnBasic"]
    },
    "columnBasic": {
      "type": "column",
      "style": "columnBasicStyle",
      "children": ["box1", "box2", "box3"]
    },
    "box1": {
      "type": "container",
      "style": "box1Style"
    },
    "box2": {
      "type": "container",
      "style": "box2Style"
    },
    "box3": {
      "type": "container",
      "style": "box3Style"
    }
  },
  "styles": {
    "screenStyle": {
      "width": "100%",
      "height": "100%",
      "backgroundColor": "#f5f5f5",
      "display": "flex",
      "flexDirection": "column",
      "alignItems": "center",
      "padding": "20px"
    },
    "titleStyle": {
      "fontSize": "24px",
      "fontWeight": "bold",
      "marginBottom": "20px",
      "color": "#333"
    },
    "containerStyle": {
      "width": "100%",
      "height": "100%",
      "padding": "20px"
    },
    "columnBasicStyle": {
      "width": "300px",
      "height": "400px",
      "backgroundColor": "#ffffff",
      "border": "1px solid #e0e0e0",
      "borderRadius": "8px",
      "padding": "16px"
    },
    "box1Style": {
      "width": "100%",
      "height": "80px",
      "backgroundColor": "#e3f2fd",
      "borderRadius": "4px",
      "marginBottom": "16px"
    },
    "box2Style": {
      "width": "100%",
      "height": "80px",
      "backgroundColor": "#e8f5e9",
      "borderRadius": "4px",
      "marginBottom": "16px"
    },
    "box3Style": {
      "width": "100%",
      "height": "80px",
      "backgroundColor": "#fff3e0",
      "borderRadius": "4px"
    },
    "itemLabel": {
      "fontFamily": "Arial",
      "fontSize": 16,
      "fontWeight": "bold",
      "textColor": "#FFFFFF",
      "textAlign": "center"
    }
  }
} 