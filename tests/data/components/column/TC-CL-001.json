{
  "version": "1.0",
  "name": "Column组件基本渲染测试",
  "root": "screen",
  "designReference": {
    "width": 1200,
    "height": 800
  },
  "components": {
    "screen": {
      "id": "screen",
      "type": "screen",
      "style": {
        "width": "100%",
        "height": "100%",
        "backgroundColor": "#f5f5f5",
        "display": "flex",
        "flexDirection": "column",
        "alignItems": "center",
        "padding": "20px"
      },
      "children": ["title", "container"]
    },
    "title": {
      "id": "title",
      "type": "text",
      "style": {
        "fontSize": "24px",
        "fontWeight": "bold",
        "marginBottom": "20px",
        "color": "#333"
      },
      "text": "Column组件基本渲染测试"
    },
    "container": {
      "id": "container",
      "type": "container",
      "style": {
        "width": "100%",
        "height": "100%",
        "padding": "20px"
      },
      "children": ["title", "columnBasic"]
    },
    "columnBasic": {
      "type": "column",
      "styles": {
        "width": "300px",
        "height": "400px",
        "backgroundColor": "#ffffff",
        "border": "1px solid #e0e0e0",
        "borderRadius": "8px",
        "padding": "16px"
      },
      "children": ["box1", "box2", "box3"]
    },
    "box1": {
      "type": "container",
      "styles": {
        "width": "100%",
        "height": "80px",
        "backgroundColor": "#e3f2fd",
        "borderRadius": "4px",
        "marginBottom": "16px"
      }
    },
    "box2": {
      "type": "container",
      "styles": {
        "width": "100%",
        "height": "80px",
        "backgroundColor": "#e8f5e9",
        "borderRadius": "4px",
        "marginBottom": "16px"
      }
    },
    "box3": {
      "type": "container",
      "styles": {
        "width": "100%",
        "height": "80px",
        "backgroundColor": "#fff3e0",
        "borderRadius": "4px"
      }
    }
  },
  
  "styles": {
    "itemLabel": {
      "fontFamily": "Arial",
      "fontSize": 16,
      "fontWeight": "bold",
      "textColor": "#FFFFFF",
      "textAlign": "center"
    }
  }
} 