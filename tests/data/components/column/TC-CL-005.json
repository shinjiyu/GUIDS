{
  "version": "1.0",
  "name": "Column组件背景样式测试",
  "designReference": {
    "width": 1200,
    "height": 800
  },
  "root": "screen",
  "components": {
    "screen": {
      "type": "screen",
      "styles": {
        "backgroundColor": "#f5f5f5"
      },
      "children": ["container"]
    },
    "container": {
      "type": "container",
      "styles": {
        "width": "100%",
        "height": "100%",
        "padding": "20px"
      },
      "children": ["title", "columnSolidColor", "columnGradient", "columnImage", "columnTransparent"]
    },
    "title": {
      "type": "text",
      "styles": {
        "fontSize": "24px",
        "fontWeight": "bold",
        "marginBottom": "20px"
      },
      "text": "Column组件背景样式测试"
    },
    "columnSolidColor": {
      "type": "column",
      "styles": {
        "width": "300px",
        "height": "200px",
        "backgroundColor": "#e3f2fd",
        "border": "1px solid #e0e0e0",
        "borderRadius": "8px",
        "padding": "16px",
        "marginBottom": "20px"
      },
      "layout": {
        "spacing": 8
      },
      "children": ["solidColorTitle", "solidColorBox1", "solidColorBox2", "solidColorBox3"]
    },
    "solidColorTitle": {
      "type": "text",
      "styles": {
        "fontSize": "16px",
        "fontWeight": "bold",
        "marginBottom": "10px"
      },
      "text": "纯色背景"
    },
    "solidColorBox1": {
      "type": "container",
      "styles": {
        "width": "100%",
        "height": "40px",
        "backgroundColor": "#ffffff",
        "borderRadius": "4px"
      }
    },
    "solidColorBox2": {
      "type": "container",
      "styles": {
        "width": "100%",
