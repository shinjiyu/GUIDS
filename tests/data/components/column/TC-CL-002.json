{
  "version": "1.0",
  "name": "Column对齐与间距测试",
  "root": "rootColumn",
  "components": {
    "rootColumn": {
      "type": "column",
      "style": "columnStyle",
      "layout": {
        "alignment": "center",
        "spacing": 8
      },
      "children": ["leftText", "centerText", "rightText"]
    },
    "leftText": {
      "type": "text",
      "content": "左对齐",
      "style": "leftTextStyle"
    },
    "centerText": {
      "type": "text",
      "content": "居中对齐",
      "style": "centerTextStyle"
    },
    "rightText": {
      "type": "text",
      "content": "右对齐",
      "style": "rightTextStyle"
    }
  },
  "styles": {
    "columnStyle": {
      "width": "320px",
      "height": "200px",
      "backgroundColor": "#e0e0e0"
    },
    "leftTextStyle": {
      "textAlign": "left",
      "width": "100%"
    },
    "centerTextStyle": {
      "textAlign": "center",
      "width": "100%"
    },
    "rightTextStyle": {
      "textAlign": "right",
      "width": "100%"
    }
  }
} 